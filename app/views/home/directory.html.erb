<%=title "NGO Directory"%>
<h1><strong>Search</strong></h1>


<%= form_tag directory_path ,class: 'form-group', :method => 'get', :id => "gs" do %>
<br/>
<div class="col-lg-12 left-snap">
    <div class="pull-left col-lg-8 left-snap"><%= text_field_tag :search, params[:search], class: 'form-control'  %></div>
<div class="pull-left push-a-bit">
	<%=select_tag("city", options_for_select(Ngo.all.flat_map(&:city), params[:city]), {include_blank: ''})%>
	
	</div>
</div><br/><br/>
<% end %>

<div class="ngo_toggler">

<div id="ngos">
<%= render 'ngos'%>
</div>
</div>
