<% title "NGO Directory" %>

<%= form_tag directory_path ,class: 'form-horizontal form', :method => 'get', :id => "gs" do %>
<br/>
	<div class="form-group">
		<div class="col-lg-8">
			<%= text_field_tag :search, params[:search], class: 'form-control input-lg', :placeholder => "Start typing to search for a charity"  %>
		</div>
		<div class="col-lg-4">
			<%=select_tag("city", options_for_select(Ngo.all.flat_map(&:city).uniq, params[:city]), { :prompt => "Select a city" , class: 'form-control input-lg select-city'})%>
		</div>
	</div>

<br/>
<% end %>

<div class="ngo_toggler">

	<div id="ngos">
		<%= render 'ngos'%>
	</div>

</div>
