<!DOCTYPE html>
<html>
<head>
  <title>Goodwork</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<% if(!current_page?('/')) %>
	<body>
<% else %>
	<body class="atroot">
<% end %>



	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	  <!-- Brand and toggle get grouped for better mobile display -->
	  <div class="navbar-header">
	    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
	      <span class="sr-only">Toggle navigation</span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	      <span class="icon-bar"></span>
	    </button>
	    <a class="navbar-brand" href="#">Charitly</a>
	  </div>

	  <!-- Collect the nav links, forms, and other content for toggling -->
	  <div class="collapse navbar-collapse navbar-ex1-collapse">
	    <ul class="nav navbar-nav navbar-right">
	      <li><a href="#">How it works</a></li>
	      <li><%=link_to "Are you an NGO?", home_welcome_path %></li>

	      <% if ngo_signed_in? %>

		      <li class="dropdown">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown">NGO <b class="caret"></b></a>
		        <ul class="dropdown-menu">
		          <li><%=link_to "Profile", root_path %></li>
		          <li><%=link_to "Logout", destroy_ngo_session_path, :method => 'delete' %></li>
		        </ul>
		      </li>

		  <% elsif administrator_signed_in? %>

		      <li class="dropdown">
		        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
		        <ul class="dropdown-menu">
		          <li><%=link_to "All Ngos", admin_index_path %></li>
		          <li><%=link_to "Unapproved Ngos", admin_unapproved_path %></li>
		          <li><%=link_to "Donations", admin_pending_donations_path %></li>
		          <li><%=link_to "Logout", destroy_administrator_session_path, :method => 'delete' %></li>
		        </ul>
		      </li>

		  <% else %>

		      <li class="dropdown">
		        <li><%=link_to "Login", new_ngo_session_path %></li>
		      </li>

		  <% end %>

	    </ul>
	  </div><!-- /.navbar-collapse -->
	</nav>

	<% if(!current_page?('/')) %>

		<div class="container">

		<% if flash[:notice] %>
			<div class="alert alert-success"><%= notice %>
			<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a></div>
		<% end %>
		<% if flash[:alert] %>
			<div class="alert alert-info"><%= alert %>
			<a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a></div>
		<% end %>

    <% end %>

		<%= yield %>
</div>

</body>
</html>
