
<% title "Sign Up" %>

<h2>Sign up</h2>

<%= simple_form_for(resource, html: {class: ' ' }, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  

  <div class="form-group">
  <div class="note-fields"><strong>Note:</strong> &nbsp;Fields marked with <span style="color:rgb(243,43, 43)">*</span> are mandatory.</div>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :name, :required => true, :label => "Name of NGO" %>
	  <%= f.input :password, :required => true %>
	  <%= f.input :password_confirmation, :required => true %>

	  <%= f.input :avatar, as: :file %>

    <%= f.input :shortdesc, :required => true, input_html: { class: 'form-control' }, :label => "Short Description of NGO" %>
    <%= f.input :longdesc, :as => :text ,  :label => "Long Description of NGO"%>
    <%= f.input :phone, :required => true %>
    <%= f.input :address1, :required => true,  :label => "Address line 1" %>
    <%= f.input :address2, :required => true,  :label => "Address line 2" %>
    <%= f.input :state, collection: Carmen::Country.coded('IN').subregions.flat_map(&:name) %>

    <%= f.input :city, :required => true %>

    <%= f.association :categories, as: :check_boxes, label: 'What all does your organization accept?' %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
