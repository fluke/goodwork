<% title "Sign Up" %>

<h2>Sign up</h2>

<%= simple_form_for(resource, html: {class: ' ' }, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">

    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :name, :required => true %>
	  <%= f.input :password, :required => true %>
	  <%= f.input :password_confirmation, :required => true %>

	  <%= f.input :avatar, as: :file %>

    <%= f.input :shortdesc, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :longdesc, :as => :text %>
    <%= f.input :phone, :required => true %>
    <%= f.input :address1, :required => true %>
    <%= f.input :address2, :required => true %>
    <%= f.input :city, :required => true %>
    <%= f.input :state, collection: Carmen::Country.coded('IN').subregions %>
    <%= f.association :categories, as: :check_boxes, label: 'What all does your organization accept?' %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
