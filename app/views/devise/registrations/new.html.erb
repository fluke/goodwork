<h2>Sign up</h2>

<%= simple_form_for(resource, html: {class: ' ' }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email, :required => true, :autofocus => true, input_html: { class: 'form-control' } %>
    <%= f.input :name, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :shortdesc, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :longdesc, :as => :text, input_html: { class: 'form-control' } %>
    <%= f.input :phone, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :address1, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :address2, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :city, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :state, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :password, :required => true, input_html: { class: 'form-control' } %>
    <%= f.input :password_confirmation, :required => true, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
