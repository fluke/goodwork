<%= simple_form_for @donation,  { :method => 'post', wrapper: :home} do |f|%>
  
  <ul class="error-list">
  <% @donation.errors.full_messages.each do |message| %>
    <li><%= message %></li> 
  <% end %>
  </ul>

  <div class="form-group">
    <%= f.input :name, placeholder: 'I want to donate a', :autofocus => true, size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>

  
    <%= f.input :category, collection: Category.all, prompt: "Select a category", size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>

  </div>
  <div class="form-group">
    <%= f.input :description, placeholder: 'Description of item', as: :text, size_html: { class: 'col-sm-12 col-lg-12 col-md-12'} %>
  </div>

  <div class="form-group">
    <%= f.input :full_name, placeholder: 'Full name', size_html: { class: 'col-sm-12 col-lg-12 col-md-12'} %>
  </div>

  <div class="form-group">
    <%= f.input :address1, placeholder: 'Address Line 1', size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>

    <%= f.input :address2, required: 'false', placeholder: 'Address Line 2', size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>
  </div>

  
  <div class="form-group">
    <%= f.input :city, placeholder: 'City', size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>
    <%= f.input :state, collection: Carmen::Country.coded('IN').subregions, size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>
  </div>
  <div class="form-group">
    <%= f.input :ph_no, placeholder: 'Phone', size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>

    <%= f.input :email, placeholder: 'E-mail', size_html: { class: 'col-sm-6 col-lg-6 col-md-6'} %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Make your pledge!" ,class: "btn-success"  %>
  </div>


<% end %>