<%= simple_form_for @donation,  { url: donation_create_path , :method => 'post'} do |f|%>
  <% if @donation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donation.errors.count, "error") %> prevents us from carrying out this donation.</h2>

      <ul>
      <% @donation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, :required => true, label: 'I want to donate a', :autofocus => true, input_html: {:class => 'form-control'} %>
  </div>

<div class="form-group">
    <%= f.input :description, :required => true, label: 'Description of item',  input_html: {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.input :full_name, :required => true, label: 'Full name',  input_html: {:class => 'form-control'} %>
  </div>


 <div class="form-group">
    <%= f.input :address1, :required => true, label: 'Address Line 1',  input_html: {:class => 'form-control'} %>
  </div>

 <div class="form-group">
    <%= f.input :address2, :required => true, label: 'Address Line 2', input_html: {:class => 'form-control'} %>
  </div>

<div class="form-group">
    <%= f.input :state, collection: Carmen::Country.coded('IN').subregions %>
  </div>

<div class="form-group">
    <%= f.input :city, :required => true, label: 'City',  input_html: {:class => 'form-control'} %>
  </div>

<div class="form-group">
    <%= f.input :category, :required => true, label: 'Category',  collection: Category.all %>
  </div>
<div class="form-group">
    <%= f.input :ph_no, :required => true, label: 'Phone',  input_html: {:class => 'form-control'} %>
 </div>
<div class="form-group">
    <%= f.input :email, :required => true, label: 'E-mail',  input_html: {:class => 'form-control'} %>
 </div>

  <div class="form-actions">
    <%= f.button :submit, "Go!" %>
  </div>


<% end %>