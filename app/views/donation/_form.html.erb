<% if flash[:notice] %>
  <div class="alert alert-success"><%= notice %>
  <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a></div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-info"><%= alert %>
  <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a></div>
<% end %>

<%= simple_form_for @donation,  { url: donation_create_path , :method => 'post'} do |f|%>

  <%= f.error_notification %>

  <%= f.input :name, :required => true, label: 'I want to donate a', :autofocus => true %>

  <%= f.input :description, :required => true, label: 'Description of item' %>

  <%= f.input :full_name, :required => true, label: 'Full name' %>


  <%= f.input :address1, :required => true, label: 'Address Line 1' %>

  <%= f.input :address2, :required => true, label: 'Address Line 2' %>

  <%= f.input :state, collection: Carmen::Country.coded('IN').subregions %>

  <%= f.input :city, :required => true, label: 'City' %>

  <%= f.input :category, :required => true, label: 'Category',  collection: Category.all %>


  <%= f.input :ph_no, :required => true, label: 'Phone' %>

  <%= f.input :email, :required => true, label: 'E-mail' %>
 
  <div class="form-actions">
    <%= f.button :submit, "Go!" %>
  </div>


<% end %>